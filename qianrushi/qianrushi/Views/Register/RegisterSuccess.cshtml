
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterSuccess</title>
    <script type="text/JavaScript">
        var secs = 5; //倒计时的秒数
        for (var i = secs; i >= 0; i--) {
            window.setTimeout("doUpdate(" + i + ")", (secs - i) * 1000);
        }
        function doUpdate(num) {
            document.getElementById("RegSuccess").innerHTML = "如果"+ num + "后没有自动跳转，请点击这里进行跳转!";
            if (num == 0) { window.location = 'Login/Login' }
        }
    </script>
</head>
<body>
    <div>
        <h1>注册成功</h1>
        <a href="Login/Login" id="RegSuccess"></a> 
    </div>
</body>
</html>
